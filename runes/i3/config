# i3 config file (v4) Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4
set $term urxvt

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 1
default_floating_border pixel 1
# Hide borders
hide_edge_borders none
# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font xft:Noto Sans Mono:style=Bold 12
# Use Mouse+$mod to drag floating windows
floating_modifier $mod
focus_follows_mouse no
# Don't switch workspace when switching focus, unless there is only one window in the current ws
focus_wrapping force

######################################## WORKSPACES ##########################################
set $ws1 1: Main
set $ws2 2: Browser
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9: Media

######################################## ON BOOT LAUNCH APPS ###################################
exec --no-startup-id changeMeWallCicle
exec --no-startup-id xcompmgr -c -n
exec --no-startup-id dropbox start

######################################### KEYBOARD SHORTCUTS ###################################
####### APPS
bindsym $mod+Return       exec --no-startup-id $term
bindsym $mod+Shift+Return exec --no-startup-id termFromHere
bindsym $mod+Ctrl+Return  exec --no-startup-id termFromHere '-title floating-terminal'
bindsym $mod+d            exec --no-startup-id dmenu_run
bindsym $mod+Shift+d      exec --no-startup-id ~/Projects/spell-book/cantrips/menu.sh
bindsym $mod+F9           exec --no-startup-id changeMeWall
bindsym $mod+F8           exec --no-startup-id nitrogen --head="0" --set-zoom-fill ~/Pictures/Wallpapers/home.png
bindsym $mod+Ctrl+m       exec --no-startup-id $term -e 'pacmixer'
bindsym $mod+Mod1+m       exec --no-startup-id $term -e 'ncpamixer'
bindsym $mod+F2           exec --no-startup-id firefox
bindsym $mod+F3           exec --no-startup-id discord
bindsym $mod+F4           exec --no-startup-id steam
bindsym $mod+F5           exec --no-startup-id idea
bindsym Print             --release exec --no-startup-id scrot '%Y-%m-%d_$wx$h.png' -s -e 'xclip -sel clip -t image/png $f && rm $f'
bindsym Shift+Print       --release exec --no-startup-id scrot -s -e 'scrot-rename $f'
bindsym $mod+Print        --release exec --no-startup-id scrot -s -e 'mv $f /tmp/ && sxiv -b -g $wx$h -p /tmp/$f && rm /tmp/$f'
bindsym $mod+Shift+v      exec --no-startup-id $term -e vis
bindsym $mod+backslash    exec --no-startup-id pause
bindsym $mod+minus        exec --no-startup-id vd 5
bindsym $mod+plus         exec --no-startup-id vu 5
bindsym $mod+Prior        exec --no-startup-id next
bindsym $mod+Next         exec --no-startup-id prev
bindsym $mod+End          exec --no-startup-id next-file
bindsym $mod+Home         exec --no-startup-id prev-file
bindsym $mod+Up           exec --no-startup-id frwd 60
bindsym $mod+Down         exec --no-startup-id back 60
bindsym $mod+Right        exec --no-startup-id frwd 5
bindsym $mod+Left         exec --no-startup-id back 5
bindsym $mod+Ctrl+s       exec --no-startup-id $term -title floating-terminal -e syncspellbook
bindsym $mod+t            exec --no-startup-id $term -e htop
bindsym $mod+c            exec --no-startup-id $term -title floating-terminal -e bc -l
bindsym $mod+x            exec --no-startup-id $term -fn "xft:DejaVu Sans Mono:autohint=true:size=20" -title floating-terminal-calendar -e bash -c "cal -s && read -s -r -n 1"
bindsym $mod+Shift+x      exec --no-startup-id $term -title floating-terminal-weather -e bash -c "curl http://wttr.in/ && read -s -r -n 1"
bindsym $mod+Mod1+s       exec --no-startup-id $term -title floating-terminal -e sssh
bindsym $mod+Ctrl+x       exec --no-startup-id $term -fn "xft:DejaVu Sans Mono:autohint=true:size=30" -title floating-terminal-clock -e clock
bindsym $mod+v            exec --no-startup-id playClipboard
####### NAVIGATION
bindsym $mod+j         focus down
bindsym $mod+k         focus up
