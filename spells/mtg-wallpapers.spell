#!/bin/bash
mkdir -p /tmp/walls
cd /tmp/walls || exit 1
rm -f *

curl --silent https://magic.wizards.com/en/articles/media/wallpapers \
    | grep '1920x1080' \
    | cut -d'=' -f2 \
    | cut -d'"' -f2 \
    | xargs wget --quiet \
    || exit 1

for f in *
do
    mv "$f" "$HOME/Pictures/Wallpapers/$(echo "$f" | sed -e 's/_1920x1080//' -e 's/_Wallpaper//')"
done
