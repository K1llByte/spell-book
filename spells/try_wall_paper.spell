#!/bin/bash
export DISPLAY=:0
if [ "$#" -gt 0 ]
then
    WALL="$1"
else
    WALL="$(xclip -sel clip -o)"
fi
changeMeWall "$WALL"
echo 'get? [y/N]'
read -r a
{ [ "$a" = y ] || [ "$a" = Y ]; } && read -r -p "name? [Original: $(basename "$WALL")] " name && wget "$WALL" -O  Pictures/Wallpapers/"$name.${WALL##*.}"
