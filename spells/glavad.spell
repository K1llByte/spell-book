#!/bin/bash

if pgrep -a -o glava | grep -v 'glavad'; then
    pkill glava
else
    # num_screens="$(xrandr --listactivemonitors | wc -l)"
    #    width=$(( num_screens * 1920 ))
    width=1920
    glava \
        --request='setgeometry 0 0 '$width' 1080' \
        --request='setopacity "xroot"' \
        -d \
        "$@" \
        ;

    disown
fi
